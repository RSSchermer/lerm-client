<header class="page-header">
  <h1>Clone project</h1>

  <nav class="page-nav-links">
    {{#link-to 'projects.show' project class='btn btn-default back-link'}}
      {{fa-icon "chevron-left"}} Back
    {{/link-to}}
  </nav>
</header>

<form class="new-project-form form-horizontal" {{action (perform cloneProjectTask) on="submit"}}>
  <div class="form-group {{if errors "has-error"}}">
    <label class="control-label col-sm-2" for="name">Clone name</label>

    <div class="col-sm-10">
      {{input id="name" class="form-control" value=name placeholder="Enter a name for your clone..."}}
      {{#each errors as |error|}}
        <p class="help-block"><em>{{error.detail.name}}</em></p>
      {{/each}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      {{#spinner-button type="submit" class="btn btn-primary" isSpinning=cloneProjectTask.isRunning}}
        {{fa-icon 'save'}} Clone
      {{/spinner-button}}
    </div>
  </div>
</form>
